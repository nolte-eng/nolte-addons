<odoo>
    <template id="assets_common" name="german_din5008_report" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/nolte_berichte/static/src/scss/report_german.scss"/>
        </xpath>
    </template>

    <template id="external_layout_german">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>

        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header german">

            <div class="row">
                <div class="col-12 mb8 text-right float-right">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 120px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>

            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 0px solid black;"/>
                </div>
            </div>
        </div>

        <div class="article german" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" >
            <div class="header_address">
                <t t-if="address">
                    <div class="company_invoice_address">
                        <t t-if="company.name">
                            <span t-field="company.name"/> &#8226;

                        </t>
                        <t t-if="company.street">
                            <span t-field="company.street"/> &#8226;
                        </t>

                        <t t-if="company.street2">
                            <span t-field="company.street2"/> &#8226;
                        </t>

                        <t t-if="company.zip">
                            <span t-field="company.zip"/> &#8226;
                        </t>

                        <t t-if="company.city">
                            <span t-field="company.city"/> &#8226;
                        </t>

                        <t t-if="company.country_id">
                            <span t-field="company.country_id.name"/>
                        </t>
                        <hr class="company_invoice_line" />
                    </div>

                    <div name="invoice_address" class="invoice_address">
                        <t t-raw="address"/>
                    </div>
                </t>

                <t t-else="fallback_address">
                    <div name="invoice_address" class="invoice_address" t-raw="fallback_address" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}' />
                </t>
                <div class="company_address">
                    <!--<div>
                              <strong t-field="company.partner_id.name"/>
                     </div>-->

                    <!--<span t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>-->
                    <t t-if="info_block">

                    </t>
                    <div class="address">
                        <t t-raw="info_block"/>
                    </div>
                </div>
            </div>
            <t t-raw="0" />
        </div>

        <div class="footer o_standard_footer german">
            <div t-if="report_type == 'pdf'" class="list-inline"  style="text-align: right !important; font-size: 0.6em;">
                <div class="text-right page_number" style="width: 185mm">
                    Page:<span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>

           <!-- <div class="text-center" style="border-top: 1px solid black;">-->
            <div class="text-center" style="left: 15mm; width: 195mm; border-top: 1px solid black">
                <span t-field="company.report_footer"/>
                <t t-set="company" t-value="company.sudo()"/>
                <t t-set="footer_style"
                   t-value="'text-align:left;font-size:10px;display:inline-block;width:auto;white-space:nowrap;padding-left:0px; padding-right:5px;border-top: 0px solid;'"/>

                <div t-attf-style="#{footer_style}" t-attf-class="mr32"> <!--Address -->
                    <ul >
                        <div t-if="company.name"><span t-field="company.name"/></div>
                        <div t-if="company.street"><span t-field="company.street"/></div>
                        <div t-if="company.street2" class="ml8"> <span t-field="company.street2"/></div>
                        <div t-if="company.city or company.state_id or company.zip"><span t-field="company.zip"/> <span t-field="company.city"/> </div>
                    </ul>
                </div>

                <div t-attf-style="#{footer_style}" t-attf-class="'mr32}"><!--Contacts -->
                    <ul style="padding: 0px;">
                        <div t-if="company.phone"><i class="fa fa-phone-square"/> <span t-field="company.phone"/></div>
                        <div t-if="company.website"><i class="fa fa-globe"/> <span t-field="company.website"/></div>
                        <div t-if="company.email"><i class="fa fa-envelope"/> <span t-field="company.email"/></div>
                    </ul>
                </div>

                <div t-attf-style="#{footer_style}" class="mr32"> <!--Other -->
                    <ul style="padding: 0px;">
                        <div t-if="company.vat">VAT: <span t-field="company.vat"/></div>
                        <div t-if="company.company_registry">HR-Number: <span t-field="company.company_registry"/></div>
                        <br></br>
                    </ul>
                </div>

                <div t-attf-style="#{footer_style}" class="mr32"> <!--CEO -->
                    <ul style="padding: 0px;">
                        <div>executive director</div>
                        <div t-if="company.ceo_01"><span t-field="company.ceo_01"/></div>
                        <div t-if="company.ceo_02"><span t-field="company.ceo_02"/></div>
                        <div t-if="not company.ceo_02"><br></br></div>
                    </ul>
                </div>

                <div t-attf-style="#{footer_style}" class="mr32"> <!--Bank Details -->
                    <ul style="padding: 0px;">
                        <t t-foreach="company.bank_journal_ids" t-as="journal">
                            <t t-set="bank_acc" t-value="journal.bank_account_id"/>
                            <div t-if="bank_acc"><i class="fa fa-bank"/> <span t-field="bank_acc.bank_name"/></div>
                            <div> <t t-if="bank_acc.bank_bic"><i class="fa fa-money"/> <span t-field="bank_acc.bank_bic"/></t> </div>
                            <div> <i class="fa fa-building"/><span t-field="bank_acc.acc_number"/></div>
                        </t>
                    </ul>
                </div>
            </div>
        </div>
    </template>

</odoo>

