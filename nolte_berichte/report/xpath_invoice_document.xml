<odoo>

<template id="nolte_report_invoice_document" inherit_id="account.report_invoice_document">
  <xpath expr="/t/t/div[2]/div/table/thead/tr/th[1]" position="before">
    <th>
      <span>Item No,</span>
    </th>
  </xpath>
  <xpath expr="/t/t/div[2]/div/table/tbody/t[3]/tr/t[1]/td[1]" position="before">
    <td>
      <span t-field="line.product_id"/>
    </td>
  </xpath>

  <xpath expr="/t/t/div[2]/div/table/tbody/t[3]/tr/t[1]/td[1]" position="before">
    <td>
      <span t-esc="pos"/>
    </td>
      <t t-set="pos" t-value="pos + 1"/>
  </xpath>
    <xpath expr="/t/t/div[2]/div/table/thead/tr/th[1]" position="before">
    <th>
      <span>Pos.</span>
    </th>
  </xpath>
    <xpath expr="/t/t/div[2]/div/table/tbody/t[2]" position="before">
    <t t-set="pos" t-value="1"/>

  </xpath>
 </template> 

</odoo>
